@using SessionControllerData
@model List<ForumPost>


@{
    ViewData["Title"] = "Index";
}

<section class="centeredPanel">
    <h4 class="title">Solar System Geek Forum</h4>

    @if(TempData["Username"] != null)
    {
        <div class="post-message">Thanks @(TempData["Username"]), your message has been saved!</div>
    }
    <div class="hyperlink">
        <a asp-controller="Forum" asp-action="NewPost">Post a Message</a>
    </div>
    
    <section id="forum-section">

        @foreach (var post in Model)
        {
        <section>
            <div>
                <strong>@post.Subject</strong>
            </div>

            <div>
                by @post.Username on @post.PostDate
            </div>

            <div>
                @post.Message
            </div>
        </section>
        }
    </section>

    </section>

