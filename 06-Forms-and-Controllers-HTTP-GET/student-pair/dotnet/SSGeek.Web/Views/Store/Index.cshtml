@model List<Product>

@{
    ViewData["Title"] = "Index";
}
<section class="centeredPanel">
    <h2>Solar System Geek Gift Shop</h2>

    @foreach(var item in Model)
    {
    <div class="container">
        <div class="img">
            @*<a asp-controller="Store" asp-action="Detail" asp-route="@(item.Id)">*@<img src="~/images/@item.ImageName" class="image" />@*</a>*@
        </div>

        <div class="name">
            <h3>@item.Name</h3>
            <h3 class="price">@item.Cost.ToString("C")</h3>
        </div>

           

    </div>
    }
</section>